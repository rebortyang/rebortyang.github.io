<%- css('https://cdn.jsdelivr.net/npm/gitalk@1/dist/gitalk.css') %>
<%- js('https://cdn.jsdelivr.net/npm/gitalk@1/dist/gitalk.min.js') %>

<div id="gitalk-container"></div>

<% if(page.comments && theme.gitalk.enabled){ %>
    <script>
        var gitalk = new Gitalk({
            clientID: '{{ theme.gitalk.gitalk_clientID }}',
            clientSecret: '{{ theme.gitalk.gitalk_Secret }}',
            repo: '{{ theme.gitalk.gitalk_repo }}',
            owner: '{{ theme.gitalk.gitalk_owner }}',
            admin: '{{ theme.gitalk.gitalk_admin }}',
            distractionFreeMode: '{{ theme.gitalk.distractionFreeMode }}'  // Facebook-like distraction free mode
        })
    
        gitalk.render('gitalk-container')
    </script>
<% } %>

<% if(page.comments && theme.disqus.enabled){ %>
    <div class="blog-post-comments">
        <div id="disqus_thread">
            <noscript><%= __('comments.no_js') %></noscript>
        </div>
    </div>
<% } %>
